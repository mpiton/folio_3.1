---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import { defaultSEO } from "../utils/seo";

const seoData = {
    ...defaultSEO,
    title: "Mathieu Piton - Développeur Web",
    description:
        "Portfolio de Mathieu Piton, développeur web spécialisé en Rust et technologies modernes",
};
---

<Layout seo={seoData}>
    <Hero
        title="Mathieu Piton"
        description="Développeur web passionné et créatif"
        ctaText="Découvrir mon univers"
        ctaLink="/about"
    />
</Layout>
