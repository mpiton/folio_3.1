---
interface Props {
    title: string;
    description: string;
    link: string;
    pubDate: Date;
    imageUrl: string;
}

const { title, description, link, pubDate, imageUrl } = Astro.props;
---

<article
    class="bg-secondary rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
>
    <div class="relative h-48 overflow-hidden">
        <img
            src={imageUrl}
            alt={title}
            loading="lazy"
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
        />
    </div>
    <div class="p-6">
        <h3
            class="text-xl font-heading font-semibold text-text mb-2 line-clamp-2"
        >
            {title}
        </h3>
        <p class="text-sm text-text-light mb-4">
            {
                pubDate.toLocaleDateString("fr-FR", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                })
            }
        </p>
        <p class="text-base text-text mb-6 line-clamp-3">{description}</p>
        <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block text-primary font-semibold hover:text-primary-dark transition-colors duration-300"
        >
            Lire l'article
            <span class="sr-only">Ouvrir {title} dans un nouvel onglet</span>
        </a>
    </div>
</article>
