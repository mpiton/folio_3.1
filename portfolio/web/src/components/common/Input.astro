---
interface Props {
  type?: 'text' | 'email' | 'password' | 'tel' | 'number';
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  error?: string;
  class?: string;
  value?: string | number;
  min?: number;
  max?: number;
  pattern?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder = '',
  required = false,
  error = '',
  class: className = '',
  value = '',
  min,
  max,
  pattern,
} = Astro.props;

const id = `input-${name}`;
---

<div class:list={['input-wrapper', className]}>
  <label for={id} class="input-label">
    {label}
    {required && <span class="input-required">*</span>}
  </label>

  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    required={required}
    class:list={['input-field', { 'input-field--error': error }]}
    value={value}
    min={min}
    max={max}
    pattern={pattern}
    aria-describedby={error ? `${id}-error` : undefined}
  />

  {error && (
    <p class="input-error" id={`${id}-error`} role="alert">
      {error}
    </p>
  )}
</div>

<style>
  .input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  .input-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-color);
  }

  .input-required {
    color: #dc2626;
    margin-left: 0.25rem;
  }

  .input-field {
    padding: 0.75rem 1rem;
    border: 2px solid var(--secondary-color);
    border-radius: 0.5rem;
    background-color: var(--accent-color);
    color: var(--text-color);
    font-size: 1rem;
    width: 100%;
    transition: all 0.2s;
  }

  .input-field:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(87, 142, 126, 0.2);
  }

  .input-field::placeholder {
    color: #9ca3af;
  }

  .input-field--error {
    border-color: #dc2626;
  }

  .input-field--error:focus {
    border-color: #dc2626;
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.2);
  }

  .input-error {
    font-size: 0.875rem;
    color: #dc2626;
    margin-top: 0.25rem;
  }

  /* Disabled state */
  .input-field:disabled {
    background-color: #f3f4f6;
    cursor: not-allowed;
    opacity: 0.7;
  }

  /* Media queries */
  @media (max-width: 768px) {
    .input-field {
      font-size: 16px; /* Prevent zoom on iOS */
    }
  }
</style>
